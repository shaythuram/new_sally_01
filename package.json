{
  "name": "electron-vue-recorder",
  "version": "1.0.0",
  "description": "Electron app with Vue.js for recording system audio/video and microphone audio",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "dev:vue": "vite",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "keywords": ["electron", "vue", "recording", "desktop-capture"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "vue": "^3.3.8"
  },
  "build": {
    "appId": "com.example.electron-vue-recorder",
    "productName": "Electron Vue Recorder",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
